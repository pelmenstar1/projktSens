<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:id="@+id/requestPermissions_userDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/requestPermissions_userDescriptionTopMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/requestPermissions_whyButton"
        android:layout_width="@dimen/requestPermissions_whyButton_size"
        android:layout_height="@dimen/requestPermissions_whyButton_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestPermissions_userDescription"
        android:layout_marginTop="@dimen/requestPermissions_whyButton_topMargin"
        android:background="@drawable/ic_help"
        android:backgroundTint="?attr/colorPrimary"/>

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:id="@+id/requestPermissions_whyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestPermissions_whyButton"
        android:layout_marginTop="@dimen/requestPermissions_whyText_topMargin"
        android:paddingStart="@dimen/requestPermissions_whyText_sidePadding"
        android:paddingEnd="@dimen/requestPermissions_whyText_sidePadding"/>

    <Button
        android:id="@+id/requestPermissions_requestButton"
        android:layout_width="@dimen/requestPermissions_requestButtonSize"
        android:layout_height="@dimen/requestPermissions_requestButtonSize"
        android:layout_marginBottom="@dimen/requestPermissions_requestButtonMarginBottom"
        android:background="@drawable/ic_circle_with_inner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--

    <Button
